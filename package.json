{
  "name": "assistant-io",
  "version": "1.0.0",
  "description": "A browser-based speech recognition and synthesis assistant",
  "type": "module",
  "main": "dist/assistant.js",
  "module": "dist/assistant.mjs",
  "types": "dist/assistant.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "build:demo": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build:demo && gh-pages -d dist",
    "prepare": "npm run build:lib"
  },
  "keywords": [
    "speech",
    "recognition",
    "synthesis",
    "voice",
    "assistant",
    "browser"
  ],
  "author": "Andrew Swank",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "vite": "^5.0.0",
    "rollup": "^4.9.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swankylegg/assistant-io.git"
  },
  "bugs": {
    "url": "https://github.com/swankylegg/assistant-io/issues"
  },
  "homepage": "https://swankylegg.github.io/assistant-io/"
}
